

@model IEnumerable<SCBHarmonization.Models.tbl_TopFive_ResponseSummary>
@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    <h3>Last Five Days Report</h3>
    <div class="col-md-11">
        @foreach (var item in Model)
        {
            <div class="col-4 col-md-2">
                <div class="card card-stats">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5 col-md-4">
                                <div class="icon-big text-center icon-warning">
                                    <i class="nc-icon nc-money-coins text-danger"></i>
                                </div>
                            </div>
                            <div class="col-7 col-md-8">
                                <div class="numbers">
                                    @*$@string.Format("{0:#,0.00}", item.TotalAmount)*@
                                    @*@string.Format("{0:#,0.}", item.TotalAmount)*@
                                    <p class="card-title">Total: <span class="">@item.Total</span></p>
                                    <p class="card-category" style="font-size: 20px;">Successfull: <span class="text-success"> @Html.DisplayFor(model => item.Successful)</span><p>
                                    <p class="card-category" style="font-size: 20px;">Failed: <span class="text-danger">@Html.DisplayFor(model => item.Failed)</span><p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer ">
                        <hr>
                        <div class="stats">
                            @*<i class="far fa-clock"></i>*@
                            Reporting Date: @item.SendDate
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-1">
        <div class="col-md-1">
            @using (Html.BeginForm("LastFiveResponse", "Home", FormMethod.Post))
            {
                <input type="submit" value="Update" class="btn btn-outline-danger" style="position:relative; left: 0px;" />
            }

        </div>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
            </script>
        }

    </div>

</div>
<div class="row">
    <div class="col-4 col-md-2">
        <div class="card card-stats">
            <div class="card-body">
                <div class="row">
                    <h4 class="card-title">Reset Credentials Countdown</h4>
                    <div class="col-5 col-md-4">
                        <div class="icon-big text-center icon-warning">
                            <i class="nc-icon nc-time-alarm text-danger"></i>
                        </div>
                    </div>
                    <div class="col-7 col-md-8">
                        <div class="numbers">
                            <p class="card-title">Days: <span class="">@ViewBag.Days</span></p>
                            <p class="card-category" style="font-size: 20px;">Last-Reset: <span class="text-success">2017-06-15 </span><p>
                            <p class="card-category" style="font-size: 20px;">Next Reset: <span class="text-danger">2017-06-15</span><p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer ">
                <hr>
                <div class="stats">
                    @ViewBag.Days Days to next reset
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-4">
        <div class="card ">
            <div class="card-header ">
                <h5 class="card-title">Email Statistics</h5>
                <p class="card-category">Last Campaign Performance</p>
            </div>
            <div class="card-body ">
                <canvas id="chartEmail"></canvas>
            </div>
            <div class="card-footer ">
                <div class="legend">
                    <i class="fa fa-circle text-primary"></i> Opened
                    <i class="fa fa-circle text-warning"></i> Read
                    <i class="fa fa-circle text-danger"></i> Deleted
                    <i class="fa fa-circle text-gray"></i> Unopened
                </div>
                <hr>
                <div class="stats">
                    <i class="fa fa-calendar"></i> Number of emails sent
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card card-chart">
            <div class="card-header">
                <h5 class="card-title">Success: Fail</h5>
                <p class="card-category">Line Chart with Points</p>
            </div>
            <div class="card-body">
                <canvas id="speedChart" width="400" height="100"></canvas>
            </div>
            <div class="card-footer">
                <div class="chart-legend">
                    <i class="fa fa-circle text-info"></i> Success
                    <i class="fa fa-circle text-warning"></i> Fail
                </div>
                <hr />
                <div class="card-stats">
                    <i class="fa fa-check"></i> Data information certified
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row" style="visibility: hidden">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header ">
                <h5 class="card-title">Users Transaction</h5>
                <p class="card-category">Annual performance</p>
            </div>
            <div class="card-body ">
                <canvas id=chartHours width="400" height="100"></canvas>
            </div>
            <div class="card-footer ">
                <hr>
                <div class="stats">
                    <i class="fa fa-history"></i> Updated 3 minutes ago
                </div>
            </div>
        </div>
    </div>
</div>
