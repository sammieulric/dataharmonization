@model IEnumerable<SCBHarmonization.Models.TransactionStatus>

@{
    ViewBag.Title = "Transactions Status";
    Layout = "~/Views/Shared/_Layoutc.cshtml";
}

<style>
    tr:hover {
        background-color: #f5f5f5;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    th {
        background-color: #202A44;
        color: white;
    }
</style>

<h2>Transactions Status</h2>
<div class="btn btn-outline-primary col-md-6" style="margin-top: 40px; margin-bottom: 40px; margin-left: 50px;">
    @Html.ActionLink("Send Transactions", "SendTransaction", "TransactionStatus")
</div>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table table-borderless">
    <thead class="table-dark">
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.TenantId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SendDate)
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SendDate)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }

</table>
